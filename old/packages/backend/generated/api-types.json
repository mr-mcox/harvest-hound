{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Harvest Hound API Types",
  "type": "object",
  "definitions": {
    "Ingredient": {
      "description": "Clean domain model for ingredients.\n\nAll state mutations return (updated_aggregate, events) tuples\nfor explicit event tracking without infrastructure concerns.",
      "properties": {
        "ingredient_id": {
          "format": "uuid",
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "default_unit": {
          "type": "string"
        },
        "created_at": {
          "format": "date-time",
          "type": "string"
        }
      },
      "required": [
        "ingredient_id",
        "name",
        "default_unit",
        "created_at"
      ],
      "title": "Ingredient",
      "type": "object"
    },
    "InventoryItem": {
      "properties": {
        "store_id": {
          "format": "uuid",
          "type": "string"
        },
        "ingredient_id": {
          "format": "uuid",
          "type": "string"
        },
        "quantity": {
          "type": "number"
        },
        "unit": {
          "type": "string"
        },
        "notes": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "added_at": {
          "format": "date-time",
          "type": "string"
        }
      },
      "required": [
        "store_id",
        "ingredient_id",
        "quantity",
        "unit",
        "added_at"
      ],
      "title": "InventoryItem",
      "type": "object"
    },
    "InventoryStore": {
      "description": "Clean domain model for inventory stores.\n\nAll state mutations return (updated_aggregate, events) tuples\nfor explicit event tracking without infrastructure concerns.",
      "properties": {
        "store_id": {
          "format": "uuid",
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "default": "",
          "type": "string"
        },
        "infinite_supply": {
          "default": false,
          "type": "boolean"
        },
        "inventory_items": {
          "items": {
            "properties": {
              "store_id": {
                "format": "uuid",
                "type": "string"
              },
              "ingredient_id": {
                "format": "uuid",
                "type": "string"
              },
              "quantity": {
                "type": "number"
              },
              "unit": {
                "type": "string"
              },
              "notes": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "null"
                  }
                ],
                "default": null
              },
              "added_at": {
                "format": "date-time",
                "type": "string"
              }
            },
            "required": [
              "store_id",
              "ingredient_id",
              "quantity",
              "unit",
              "added_at"
            ],
            "type": "object"
          },
          "type": "array"
        }
      },
      "required": [
        "store_id",
        "name"
      ],
      "title": "InventoryStore",
      "type": "object"
    },
    "InventoryItemView": {
      "description": "Denormalized read model for inventory items with ingredient and store names.\n\nOptimized for UI consumption with flat structure and computed properties.",
      "properties": {
        "store_id": {
          "format": "uuid",
          "type": "string"
        },
        "ingredient_id": {
          "format": "uuid",
          "type": "string"
        },
        "ingredient_name": {
          "type": "string"
        },
        "store_name": {
          "type": "string"
        },
        "quantity": {
          "type": "number"
        },
        "unit": {
          "type": "string"
        },
        "notes": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "added_at": {
          "format": "date-time",
          "type": "string"
        }
      },
      "required": [
        "store_id",
        "ingredient_id",
        "ingredient_name",
        "store_name",
        "quantity",
        "unit",
        "added_at"
      ],
      "title": "InventoryItemView",
      "type": "object"
    },
    "StoreView": {
      "description": "Denormalized read model for inventory stores with computed fields.\n\nIncludes computed item_count for efficient store listing views.",
      "properties": {
        "store_id": {
          "format": "uuid",
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "default": "",
          "type": "string"
        },
        "infinite_supply": {
          "default": false,
          "type": "boolean"
        },
        "item_count": {
          "default": 0,
          "type": "integer"
        },
        "created_at": {
          "format": "date-time",
          "type": "string"
        }
