        },
        "infinite_supply": {
          "type": "boolean"
        },
        "created_at": {
          "format": "date-time",
          "type": "string"
        }
      },
      "required": [
        "store_id",
        "name",
        "description",
        "infinite_supply",
        "created_at"
      ],
      "title": "StoreCreated",
      "type": "object"
